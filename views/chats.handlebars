<main class="content">
    <link rel="stylesheet" href="/css/chatbox.css">
    <div class="container p-0">
		<h1 class="h3 mb-3">Messages</h1>
		<div class="card">
			<div class="row g-0">
        			{{!-- threads --}}
				<div class="container col-12 col-lg-5 col-xl-3 border-right">
					<div class="px-4 d-none d-md-block">
						<div class="d-flex align-items-center">
							<div class="flex-grow-1">
								<input type="text" class="form-control my-3" placeholder="Search...">
							</div>
						</div>
					</div>
					<a href="#" class="list-group-item list-group-item-action border-0">
							<div class="border d-flex align-items-start"><span><div class="badge bg-success float-right">5</div></span>
								<img src="https://bootdey.com/img/Content/avatar/avatar5.png" class="rounded-circle mr-1" alt="Vanessa Tucker" width="40" height="40">
								<div class="flex-grow-1 ml-3">
									Vanessa Tucker
									<div class="small"><span class="fas fa-circle chat-online"></span> Online</div>
								</div>
							</div>
					</a>

					<a href="#" class="list-group-item list-group-item-action border-0">
						<div class="border d-flex align-items-start">
							<span>
								<div class="badge bg-success float-right">{{unread_messages}}</div>
							</span>
							<img src="{{profileImage}}" class="rounded-circle mr-1" alt="{{user_name}}" width="40" height="40">
							<div class="flex-grow-1 ml-3">
								{{user_name}}
								<div class="small">
										<span class="fas fa-circle chat-online"></span> {{bed_time}}
								</div>
							</div>
						</div>
					</a>

					<hr class="d-block d-lg-none mt-1 mb-0">
				</div>
    
       		{{!-- current chat --}}
			
			
				<div class="col-12 col-lg-7 col-xl-9">
					<div class="py-2 px-4 border-bottom d-none d-lg-block">
						<div class="d-flex align-items-center py-1">
							<div class="position-relative">
								<img src="{{typingUser_profileImage}}" class="rounded-circle mr-1" alt="{{typingUser_name}}" width="40" height="40">
							</div>
							<div class="flex-grow-1 pl-3">
								<strong>{{typingUser_name}}</strong>
								<div class="text-muted small"><em>{{typingUser_typingStatus}}</em></div>
							</div>
						</div>
					</div>

					<div class="position-relative">
						<div class="chat-messages p-4">
							{{#each user.chats}}
									<div class="chat-message-right pb-4">
										<div>
										<img src="{{currentUser_profileImage}}" class="rounded-circle mr-1" alt="{{currentUser_name}}" width="40" height="40">
											<div class="text-muted small text-nowrap mt-2">{{created_date}}</div>
										</div>
										<div class="flex-shrink-1 bg-light rounded py-2 px-3 mr-3">
											<div class="font-weight-bold mb-1">{{currentUser_name}}</div>
											{{message_text}}
										</div>
									</div>
									<div class="chat-message-left pb-4">
										<div>
											<img src="{{otherUser_profileImage}}" class="rounded-circle mr-1" alt="{{otherUser_name}}" width="40" height="40">
											<div class="text-muted small text-nowrap mt-2">{{created_date}}</div>
										</div>
										<div class="flex-shrink-1 bg-light rounded py-2 px-3 ml-3">
											<div class="font-weight-bold mb-1">{{otherUser_name}}</div>
											{{message_text}}
										</div>
									</div>
							{{/each}}
						</div>
					</div>
